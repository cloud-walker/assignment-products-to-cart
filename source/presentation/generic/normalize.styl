html
	font-family: sans-serif
	-ms-text-size-adjust: 100%
	-webkit-text-size-adjust: 100%

body
	margin: 0

img
	border: 0

button
input
optgroup
select
textarea
	color: inherit
	font: @color
	margin: 0

button
	overflow: visible

button
select
	text-transform: none

input
	line-height: normal

input
	&[type="checkbox"]
	&[type="radio"]
		box-sizing: border-box
		padding: 0
